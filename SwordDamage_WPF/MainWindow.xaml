<Window x:Class="SwordDamage_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwordDamage_WPF"
        mc:Ignorable="d"
        Title="SwordDamage" Height="175" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <CheckBox x:Name="flaming" Content="Flaming" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="flaming_Checked" Unchecked="flaming_Unchecked"/>
        <CheckBox x:Name="magic" Content="Magic" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Checked="magic_Checked" Unchecked="magic_Unchecked"/>
        <Button Content="Roll for damage" Grid.ColumnSpan="2" Margin="20,10" Grid.Row="1" Click="Button_Click"/>
        <TextBlock x:Name="damage" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="2" Text="damage" VerticalAlignment="Center"/>

    </Grid>
</Window>
